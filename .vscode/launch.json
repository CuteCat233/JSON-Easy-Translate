{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "vmArgs": "--module-path \"./lib\" --add-modules javafx.controls,javafx.fxml,javafx.web",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch All Tests",
            "request": "launch",
            "mainClass": "org.junit.platform.console.ConsoleLauncher",
            "args": [
                "--scan-class-path"
            ]
        }
    ]
}